{% extends "::base.html.twig" %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('bundles/gaestebuch/css/default.css') }}" />{% endblock %}
{% block script %}<script src="http://tinymce.cachefly.net/4.0/tinymce.min.js"></script>{% endblock %}

{% block body %}

	
	<div id="body_create">
		<img src="{{ asset('bundles/gaestebuch/images/header.png') }}" />
		<h4>{% trans %}Im GÃ¤stebuch registrieren{% endtrans %}</h4>
		{{ form_start(form) }}
			<table id="tbl_create" class="shadow">
				<tr>
					<td>{% trans %}Username{% endtrans %}:</td>
					<td>{{ form_widget(form.nick) }}</td>
				</tr>
				<tr>
					<td>{% trans %}Passwort{% endtrans %}:</td>
					<td>{{ form_widget(form.password.first) }}</td>
				</tr>
				<tr>
					<td>{% trans %}Passwort wiederholen{% endtrans %}:</td>
					<td>{{ form_widget(form.password.second) }}</td>
				</tr>
				<tr>
					<td colspan="2" style="text-align:center;"><input type="submit" value="{% trans %}Registrieren{% endtrans %}" /></td>
				</tr>
			</table>
			<input type="hidden" name="_target_path" value="_index" />
		{{ form_end(form) }}
		<br />
		<font style="font-weight:bold;color:#f00;">{{ error|default("") }}</font>
	</div>
{% endblock %}