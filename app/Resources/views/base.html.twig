<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
		{% block stylesheets %}<link rel="stylesheet" href="{{ asset('bundles/gaestebuch/css/default.css') }}" />{% endblock %}
		<link rel="stylesheet" href="{{ mycss() }}" />
        {% block script %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body style="background-image:url('{{ myimg() }}');">
        <div id="styleswitch">{% trans %}page.theme{% endtrans %}:
        	<a href="{{ app.request.getbaseURL() }}/style/std">[{% trans %}page.theme.wood{% endtrans %}]</a>
        	<a href="{{ app.request.getbaseURL() }}/style/stn">[{% trans %}page.theme.stone{% endtrans %}]</a>
        	<a href="{{ app.request.getbaseURL() }}/style/blu">[{% trans %}page.theme.blue{% endtrans %}]</a>
        	<a href="{{ app.request.getbaseURL() }}/style/blk">[{% trans %}page.theme.neon{% endtrans %}]</a>
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
